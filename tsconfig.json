{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"module": "es6",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"target": "ES2020"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}

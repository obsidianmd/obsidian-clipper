<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obsidian Web Clipper"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clip web pages to your Obsidian vault"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Obsidian Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textObsidianStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="Obsidian is installed" />

                <Button
                    android:id="@+id/buttonInstallObsidian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Install Obsidian"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button.TonalButton" />

                <Button
                    android:id="@+id/buttonOpenObsidian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Obsidian"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.Material3.Button.TonalButton" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configuration"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textVaultCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="Vaults: 2" />

                <TextView
                    android:id="@+id/textTemplateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="Templates: 1" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonClipUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clip URL"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Usage Instructions -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?android:colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to use"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Configure your vault name in Settings\n2. Share any URL from your browser\n3. Select this app from the share menu\n4. Review and save to Obsidian"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.3" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

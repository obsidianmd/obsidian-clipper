{
	"manifest_version": 3,
	"name": "Obsidian Web Clipper",
	"homepage_url": "https://obsidian.md/",
	"version": "0.8.4",
	"description": "Save content from the web to Obsidian, in a private and durable format you can always access offline.",
	"permissions": [
		"activeTab",
		"contextMenus",
		"storage",
		"scripting",
		"webNavigation"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"options_ui": {
		"page": "settings.html"
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"],
			"css": ["highlighter.css"]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	},
	"host_permissions": [
		"http://*/*",
		"https://*/*"
	]
}
